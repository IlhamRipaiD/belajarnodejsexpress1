<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
  <div class="container mx-auto p-8">
    <h1 class="text-3xl font-bold mb-6">Data Mahasiswa</h1>

    <!-- Notifikasi jumlah mahasiswa -->
    <div class="flex justify-end mb-4">
      <button class="relative p-2 bg-blue-500 text-white rounded-full">
        <span class="absolute top-0 right-0 block w-5 h-5 text-xs text-white bg-red-500 rounded-full flex items-center justify-center">
          <%= jumlahMahasiswa %>
        </span>
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path d="M18 10c0 3.9-3.1 7-7 7S4 13.9 4 10s3.1-7 7-7 7 3.1 7 7zm-1 0c0 3.3-2.7 6-6 6S7 13.3 7 10 9.7 4 13 4s6 2.7 6 6zm2 0c0-4.4-3.6-8-8-8s-8 3.6-8 8 3.6 8 8 8 8-3.6 8-8z"/>
        </svg>
      </button>
    </div>

    <a href="/add" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded mb-6 inline-block">Tambah Mahasiswa</a>

    <table class="min-w-full bg-white shadow-md rounded-lg">
      <thead>
        <tr class="border-b">
          <th class="px-4 py-2 text-left">Nama</th>
          <th class="px-4 py-2 text-left">NIM</th>
          <th class="px-4 py-2 text-left">Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% mahasiswa.forEach((mhs, index) => { %>
          <tr class="border-b hover:bg-gray-50">
            <td class="px-4 py-2"><%= mhs.nama %></td>
            <td class="px-4 py-2"><%= mhs.nim %></td>
            <td class="px-4 py-2">
              <a href="/edit/<%= index %>" class="text-blue-500 hover:underline">Edit</a> |
              <a href="/delete/<%= index %>" class="text-red-500 hover:underline">Hapus</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
